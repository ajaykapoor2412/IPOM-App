<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:showIn="@layout/offer_layout"
        tools:context=".MainActivity">


    <Button
            android:text="Accept"
            android:layout_width="192dp"
            android:layout_height="wrap_content"
            android:id="@+id/btnAccept"
            android:background="@android:color/holo_blue_light"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="32dp" android:layout_marginRight="32dp"
            android:layout_marginTop="180dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@+id/btnReject" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="0.0"/>
    <Button
            android:text="Reject"
            android:layout_width="192dp"
            android:layout_height="47dp"
            android:id="@+id/btnReject"
            android:background="@android:color/holo_blue_light"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="32dp"
            android:layout_marginStart="32dp" android:layout_marginTop="180dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="220dp" android:layout_marginRight="220dp"/>


    <TextView
            android:text="Here offer goes!"
            android:layout_width="wrap_content"
            android:layout_height="34dp"
            android:id="@+id/txtViewOffer"
            android:textSize="24sp"
            android:textColor="@android:color/holo_green_light"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginEnd="24dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="24dp"
            android:layout_marginStart="24dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="24dp"/>

</android.support.constraint.ConstraintLayout>