<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:showIn="@layout/activity_main"
        tools:context=".MainActivity">

    <Button
            android:text="Loan"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/btnLoan" android:layout_marginBottom="24dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="96dp" android:layout_marginStart="96dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="96dp" android:layout_marginRight="96dp"
            android:background="@android:color/holo_blue_light"/>
    <Button
            android:text="Movie"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/btnMovie" android:layout_marginBottom="50dp"
            app:layout_constraintBottom_toTopOf="@+id/btnLoan" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="96dp" android:layout_marginStart="96dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="96dp" android:layout_marginRight="96dp"
            app:layout_constraintHorizontal_bias="1.0" android:background="@android:color/holo_blue_light"/>
    <Button
            android:text="Flight"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/btnFlight" android:layout_marginBottom="50dp"
            app:layout_constraintBottom_toTopOf="@+id/btnMovie" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="96dp" android:layout_marginStart="96dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="96dp" android:layout_marginRight="96dp"
            app:layout_constraintHorizontal_bias="1.0" tools:background="@android:color/holo_blue_light"
            android:background="@android:color/holo_blue_light"/>
    <TextView
            android:text="Here offer goes!"
            android:layout_width="wrap_content"
            android:layout_height="34dp"
            android:id="@+id/txtViewOffer" android:layout_marginBottom="75dp"
            app:layout_constraintBottom_toTopOf="@+id/btnFlight" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="96dp" android:layout_marginRight="96dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="96dp"
            android:layout_marginStart="96dp" android:textSize="24sp"
            android:textColor="@android:color/holo_green_light"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="text|textPersonName"
            android:text="192.168.0.8"
            android:ems="10"
            android:id="@+id/txtIPAddress" android:layout_marginTop="32dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginEnd="96dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="96dp"
            android:layout_marginStart="96dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="96dp" android:hint="IP Address"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="text|textPersonName"
            android:text="UserId"
            android:ems="10"
            android:id="@+id/txtUserId" android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/txtIPAddress" android:layout_marginEnd="96dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="96dp"
            android:layout_marginStart="96dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="96dp"/>
</android.support.constraint.ConstraintLayout>